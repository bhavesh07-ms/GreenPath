pipeline {
    agent any

    environment {
        SERVICE_NAME = "path-planner"
        REGISTRY = "docker.io/bhavesh"
        IMAGE_TAG = "${GIT_COMMIT}"
        MANIFEST_REPO = "git@github.com/bhavesh07-ms/greenpath-manifests"
        ENV = "dev"
    }

    stages {

        stage("Checkout Source") {
            steps {
                checkout scm
            }
        }

         stage("Build commonutils") {
                      steps {
                          dir("commonutils") {
                              sh "mvn clean install"
                          }
                  }
            }

        stage("Build & Test") {
            steps {
                sh "mvn clean install"
            }
        }

        stage("Build Docker Image") {
            steps {
                sh """
                docker build -t $REGISTRY/$SERVICE_NAME:$IMAGE_TAG .
                """
            }
        }

        stage("Push Docker Image") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh """
                    docker login -u $USER -p $PASS
                    docker push $REGISTRY/$SERVICE_NAME:$IMAGE_TAG
                    """
                }
            }
        }

        stage("Deploy to ECS") {
            steps {
                sh """
                aws ecs update-service \
                  --cluster greenpath-cluster \
                  --service path-planner-service \
                  --force-new-deployment
                """
            }
        }

    }
}
