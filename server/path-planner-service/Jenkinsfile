pipeline {
    agent any

    environment {
        SERVICE_NAME = "path-planner"
        REGISTRY = "docker.io/bhavesh"
        IMAGE_TAG = "${GIT_COMMIT}"
        MANIFEST_REPO = "git@github.com/bhavesh07-ms/greenpath-manifests"
        ENV = "dev"
    }

    stages {

        stage("Checkout Source") {
            steps {
                checkout scm
            }
        }

        stage("Build & Test") {
            steps {
                sh "mvn clean test"
            }
        }

        stage("Build Docker Image") {
            steps {
                sh """
                docker build -t $REGISTRY/$SERVICE_NAME:$IMAGE_TAG .
                """
            }
        }

        stage("Push Docker Image") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-creds',
                    usernameVariable: 'USER',
                    passwordVariable: 'PASS'
                )]) {
                    sh """
                    docker login -u $USER -p $PASS
                    docker push $REGISTRY/$SERVICE_NAME:$IMAGE_TAG
                    """
                }
            }
        }

        stage("Update GitOps Manifests") {
            steps {
                sh """
                rm -rf greenpath-manifests
                git clone $MANIFEST_REPO
                cd greenpath-manifests/$ENV/$SERVICE_NAME

                sed -i 's|image:.*|image: $REGISTRY/$SERVICE_NAME:$IMAGE_TAG|' deployment.yaml

                git add deployment.yaml
                git commit -m "chore($SERVICE_NAME): deploy $IMAGE_TAG"
                git push
                """
            }
        }
    }
}
